@page "/"

<PageTitle>SyncNotes - Collaborative Note Taking</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="display-4 fw-bold text-gradient">Welcome to SyncNotes</h1>
            <p class="lead mb-4">Collaborate on notes in real-time with friends and colleagues.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a href="/notes" class="btn btn-primary btn-lg px-4 me-md-2">Start Writing</a>
                <a href="/friends" class="btn btn-outline-light btn-lg px-4">Connect with Friends</a>
            </div>
        </div>
        <div class="hero-image">
            <div class="floating-card card-1">
                <div class="card-header">Meeting Notes</div>
                <div class="card-body">Project kickoff discussion...</div>
            </div>
            <div class="floating-card card-2">
                <div class="card-header">Ideas</div>
                <div class="card-body">New feature brainstorming...</div>
            </div>
            <div class="floating-card card-3">
                <div class="card-header">To-Do</div>
                <div class="card-body">Complete documentation...</div>
            </div>
        </div>
    </div>
    
    <div class="features-section">
        <h2 class="text-center mb-5">Key Features</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <h3>Real-time Editing</h3>
                    <p>See changes as they happen with instant synchronization.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3>Collaboration</h3>
                    <p>Invite friends and work together on shared notes.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                    <h3>Secure</h3>
                    <p>Your notes are private and protected.</p>
                </div>
            </div>
        </div>
    </div>
</div>

