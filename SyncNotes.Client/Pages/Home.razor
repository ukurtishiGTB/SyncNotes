    .home-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        color: #fff;
        padding: 2rem 1rem;
    }
    
    .hero-section {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 5rem;
        position: relative;
        min-height: 70vh;
    }
    
    .hero-content {
        flex: 1;
        max-width: 600px;
        z-index: 2;
    }
    
    .hero-image {
        flex: 1;
        min-height: 400px;
        position: relative;
    }
    
    .text-gradient {
        background: linear-gradient(90deg, #ff6b6b, #4ecdc4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }
    
    .floating-card {
        position: absolute;
        width: 220px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        color: #333;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
